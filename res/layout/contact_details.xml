<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:text="姓名" />

            <EditText
                android:id="@+id/contact_name"
                style="@style/edit_style" >

                <requestFocus />
            </EditText>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="手机号码" />

            <EditText
                android:id="@+id/contact_phone"
                style="@style/edit_style"
                android:ems="10" >
            </EditText>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="性别" />

            <RadioGroup
                android:id="@+id/contact_groupsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/nan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女" />
            </RadioGroup>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="出生日期" />

            <EditText
                android:id="@+id/contact_brith"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="办公室电话" />

            <EditText
                android:id="@+id/contact_bgs_tel"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="家庭电话" />

            <EditText
                android:id="@+id/contact_jt_tel"
                style="@style/edit_style" android:hint="例如：010-00000000"
                android:ems="10" /> 

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="QQ" />

            <EditText
                android:id="@+id/contact_qq"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="邮箱" />

            <EditText
                android:id="@+id/contact_email"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="sos" />

            <Spinner
                android:id="@+id/sosspinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >
            </Spinner>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="与联系人关系" />

            <EditText
                android:id="@+id/contact_guanxi"
                style="@style/edit_style"
                android:ems="10" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/contact_add_button"
        style="@style/button_red"
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="保存" />

</LinearLayout>