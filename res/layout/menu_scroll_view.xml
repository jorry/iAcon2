<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >


    <LinearLayout
        android:layout_width="fill_parent"  android:background="#ffffff"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/menuView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           
            android:orientation="vertical"
            android:visibility="visible" >

            <!-- 菜单 -->
            <!-- 用户信息 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="15dip"
                
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/head_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    android:id="@+id/nickname"
                    style="@style/nickname_text" android:layout_marginLeft="25dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="客厅"
                    android:textColor="@android:color/black" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dip" >
                </ImageView>
            </LinearLayout>
            <!-- /用户信息 -->


            <!-- 返回首页 -->

            <LinearLayout
                android:id="@+id/qinqinglist"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text" android:layout_marginLeft="25dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="亲情列表"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <!-- /返回首页 -->

            <LinearLayout
                android:id="@+id/qinqingjianhu"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text"
                    android:layout_width="0dip" android:layout_marginLeft="25dip"
                    android:layout_weight="1"
                    android:text="监护申请"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qingqingjiating"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text"
                    android:layout_width="0dip" android:layout_marginLeft="25dip"
                    android:layout_weight="1"
                    android:text="家庭管理"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="15dip"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text" android:layout_marginLeft="25dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="亲情关怀"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guanhuaidianhuabo"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text" android:layout_marginLeft="25dip"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="电话薄"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guanhuaianquan"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text"
                    android:layout_width="0dip"
                    android:layout_weight="1" android:layout_marginLeft="25dip"
                    android:text="安全设置"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guanhuaichongzhi"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ImageView>

                <TextView
                    style="@style/menu_text"
                    android:layout_width="0dip"
                    android:layout_weight="1" android:layout_marginLeft="25dip"
                    android:text="充值"
                    android:textColor="@android:color/black" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.iAcron.view.MenuHorizontalScrollView
        android:id="@+id/mScrollView" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00ffffff"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00ffffff"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.iAcron.view.MenuHorizontalScrollView>

</FrameLayout>