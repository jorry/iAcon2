<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".BrokenLineView" >

    <LinearLayout
        android:id="@+id/LinearLayout3" android:layout_marginLeft="15dip"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal"
         >

        <TextView
            style="@style/content_text"
            android:layout_width="70dip"
            android:layout_gravity="right|center_vertical"
            android:text="@string/land_phone_landname" />

        <EditText
            android:id="@+id/landphone_nickname"
            style="@style/edit_style"
            android:ems="10" >
        </EditText>
    </LinearLayout>
    <!-- 手机号 -->

    <LinearLayout
        android:id="@+id/LinearLayout4"  android:layout_marginLeft="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
 >

        <TextView
            style="@style/content_text"
            android:layout_width="70dip"
            android:layout_gravity="right|center_vertical"
            android:text="@string/register_phone" />

        <EditText
            android:id="@+id/landphone_phone"
            style="@style/edit_style"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/land_phone_getcode"
        style="@style/button_red" 
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="获取验证码" />

</LinearLayout>