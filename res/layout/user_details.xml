<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
    android:id="@+id/acbuwa_topbar"
    style="@style/topbar_bg" >

    

    <TextView
        android:id="@+id/topbar_title" android:textColor="@android:color/white" 
        android:text="个人信息"
        style="@style/topbar_text" />

     <Button
        android:id="@+id/homeBtn"  android:layout_marginRight="5dip"
        android:background="@drawable/u38" android:layout_width="35dip"
        android:layout_height="35dip" android:layout_centerVertical="true"
     	android:layout_alignParentRight="true"
          />
     
</RelativeLayout>

    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:text="用户名" />

            <EditText
                android:id="@+id/user_name"
                style="@style/edit_style" >

                <requestFocus />
            </EditText>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="用户身份" />

            <EditText
                android:id="@+id/user_shenfen"
                style="@style/edit_style"
                android:ems="10" >
            </EditText>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="出生日期" />

            <EditText
                android:id="@+id/user_brith"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="性别" />

            <RadioGroup
                android:id="@+id/user_groupsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/nan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女" />
            </RadioGroup>

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="邮箱" />

            <EditText
                android:id="@+id/user_email"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="手机号" />

            <EditText
                android:id="@+id/user_phonecode"
                style="@style/edit_style"
                android:ems="10" />

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="QQ号" />

            <EditText
                android:id="@+id/user_qq"
                style="@style/edit_style"
                android:ems="10" />
            

            <TextView
                style="@style/content_text"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:text="个人签名" />

            <EditText
                android:id="@+id/user_qianming"
                style="@style/edit_style"
                android:layout_height="70dip"
                android:ems="10"
                android:gravity="top|left" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/contact_add_button"
        style="@style/button_red"
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="保存" />

</LinearLayout>