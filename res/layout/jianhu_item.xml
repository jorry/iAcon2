<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
     >

        <LinearLayout
            android:layout_width="match_parent" 
            android:layout_marginTop="15dip"
            android:layout_marginBottom="15dip"
            android:layout_height="wrap_content" >

            <TextView 
                android:id="@+id/time"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:text="2014-8-8"
                style="@style/content_text"/>

            <TextView 
                android:id="@+id/zhu"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:text="老年组"
                style="@style/content_text"/>

            <TextView
                android:id="@+id/beijianhuren"
                android:layout_width="0dip"
                android:layout_height="wrap_content" android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="被监护人1"
                style="@style/content_text" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dip" android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="张东林"
                style="@style/content_text"/>
        </LinearLayout>

</LinearLayout>