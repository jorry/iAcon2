<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acbuwa_topbar"
    style="@style/topbar_bg" >

    <Button
        android:id="@+id/menuBtn"
        style="@style/topbar_left_btn" android:layout_width="35dip"
        android:layout_height="35dip" android:layout_marginLeft="5dip"
        android:background="@drawable/menu_btn_selector" />

    <TextView
        android:id="@+id/topbar_title" android:textColor="@android:color/white"
        style="@style/topbar_text" />

     <Button
        android:id="@+id/homeBtn" android:visibility="gone" android:layout_marginRight="5dip"
        android:background="@drawable/u38" android:layout_width="35dip"
        android:layout_height="35dip" android:layout_centerVertical="true"
     	android:layout_alignParentRight="true"
          />
     
</RelativeLayout>