<?xml version="1.0"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dip"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="40dip" >

        <TextView
            android:id="@+id/info"
            style="@style/content_text" android:textColor="@android:color/black"
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:gravity="center"
            android:layout_weight="1"
            android:text="内容" />
		<View android:layout_width="0.5dip"
		    android:layout_height="fill_parent"
		    android:background="@android:color/black"></View>
        <TextView
            android:id="@+id/time"
            style="@style/content_text"
            android:layout_width="0dip" android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="时间" />
<View android:layout_width="0.5dip"
		    android:layout_height="fill_parent"
		    android:background="@android:color/black"></View>
        <TextView
            android:id="@+id/level" android:textColor="@android:color/black"
            style="@style/content_text"
            android:layout_width="0dip" android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="级别" />
    </LinearLayout>
	<View android:layout_width="fill_parent"
		    android:layout_height="0.5dip"
		    android:background="@android:color/black"></View>
</LinearLayout>