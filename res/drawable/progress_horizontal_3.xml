<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#fffefefe"
                android:centerY="0.75"
                android:endColor="#fff4f4f4"
                android:startColor="#fff4f4f4" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ffa81e14"
                    android:centerY="0.75"
                    android:endColor="#ffa81e14"
                    android:startColor="#ffa81e14" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:endColor="#ffa81e14"
                    android:startColor="#ffa81e14" />
            </shape>
        </clip>
    </item>

</layer-list>